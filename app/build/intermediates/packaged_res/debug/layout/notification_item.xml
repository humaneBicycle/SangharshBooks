<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:circularflow_radiusInDP="6dp"
    android:id="@+id/notification_item_background"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/tiny_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="13dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/poppinsbold"
            android:textColor="?attr/textColorTheme"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/notification_item_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/poppinsregular"
            android:paddingEnd="4dp"
            android:text="adfadgadgagadgadgdgazdgadgadgzd"
            android:textColor="?attr/test_color_sub"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification_item_title" />


    </LinearLayout>
    

</androidx.cardview.widget.CardView>