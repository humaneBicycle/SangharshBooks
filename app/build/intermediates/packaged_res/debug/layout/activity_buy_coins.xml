<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".BuyCoinsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Coins"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"
            android:textColor="@color/color_primary_txt" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/coins_1500"
            android:layout_marginTop="16dp"
            android:tag="coins_1500"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:text="1,500\nLoading Price"
            android:textAllCaps="false"
            android:onClick="buyCoins"
            android:textAlignment="viewStart"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:backgroundTint="@color/cardview_dark_background"
            android:drawableLeft="@drawable/ic_buy_coins"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:textColor="@color/color_primary_txt"
            android:layout_height="wrap_content" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/coins_5000"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:padding="12dp"
            android:tag="coins_5000"
            android:layout_width="match_parent"
            android:text="5,000\nLoading Price"
            android:textAllCaps="false"
            android:onClick="buyCoins"
            android:textAlignment="viewStart"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:backgroundTint="@color/cardview_dark_background"
            android:drawableLeft="@drawable/ic_buy_coins"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:textColor="@color/color_primary_txt"
            android:layout_height="wrap_content" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/coins_10000"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:text="10,000\nLoading Price"
            android:tag="coins_10000"
            android:textAllCaps="false"
            android:onClick="buyCoins"
            android:textAlignment="viewStart"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:backgroundTint="@color/cardview_dark_background"
            android:drawableLeft="@drawable/ic_buy_coins"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:textColor="@color/color_primary_txt"
            android:layout_height="wrap_content" />



    </LinearLayout>

</ScrollView>