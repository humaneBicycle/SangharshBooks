<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".AttemptTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/backCrossIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="backTest"
                    android:src="@drawable/cross" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noofQuesTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:text="3/14"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="QUESTIONS"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/graybg"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/timertv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="3:00"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="Time Left"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/testll">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/testwelcomebannertemplate" />

                <TextView
                    android:id="@+id/questionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Question"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

<!--                <ScrollView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content">-->
<!--                    -->
<!--                </ScrollView>-->
                <TextView
                    android:id="@+id/optionATV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:text="OptionA"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/optionBTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:text="OptionB"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/optionCTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:text="OptionC"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/optionDTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:text="OptionD"
                    android:textSize="18sp" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/quesDrawerGrid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="100dp"
                android:gravity="center"
                android:visibility="gone"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth" />

        </FrameLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/optionwhitbg"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:padding="12dp"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nextBtnTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/redBtnBg"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:padding="12dp"
                android:text=" Next "
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

