<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:id="@+id/background_file_item"
    android:layout_marginTop="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal"
        android:id="@+id/file_item_background"
        android:background="@drawable/default_gradient">
        <TextView
            android:id="@+id/book_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="?attr/textColorTheme"
            android:textSize="24sp"
            android:layout_weight="1"
            android:maxLength="18"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:id="@+id/book_item_holder_imageview"
            android:layout_gravity="center"
            android:padding="4dp"
            android:scaleType="centerCrop"
            />



    </LinearLayout>





</androidx.cardview.widget.CardView>